create DATABASE RSS;
USE RSS;
CREATE TABLE post (
	url VARCHAR(500) PRIMARY KEY,
	content TEXT,
	date_added DATE,
	last_accessed DATE
);

CREATE TABLE user(
	uid INT PRIMARY KEY
);

CREATE TABLE publisher(
	pubid INT PRIMARY KEY,
	url VARCHAR(500)
);

CREATE TABLE user_pubs (
	uid INT,
	pubid INT,
	PRIMARY KEY (uid, pubid),
	FOREIGN KEY (uid) REFERENCES user(uid),
	FOREIGN KEY (pubid) REFERENCES publisher(pubid)
);

INSERT into user (uid) VALUES (1);
INSERT into publisher (pubid, url) VALUES (1, 'https://www.theverge.com/rss/index.xml');
